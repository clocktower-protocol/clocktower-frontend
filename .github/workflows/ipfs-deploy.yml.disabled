name: Deploy to IPFS

on:
  push:
    branches: [ master, main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '22'
        cache: 'npm'
    
    - name: Install dependencies
      run: npm ci
    
    - name: Build project
      run: npm run build
    
    - name: Deploy to Pinata
      run: |
        echo "📤 Deploying to Pinata..."
        
        # Debug: Check if build directory exists
        echo "📁 Checking build directory..."
        ls -la build/
        
        # Create a zip file of the build directory
        echo "📦 Creating zip file..."
        cd build
        zip -r ../build.zip .
        cd ..
        
        echo "📄 Build zip file size:"
        ls -la build.zip
        
        # Create a temporary file for the request
        echo '{"pinataOptions": {"cidVersion": 1}, "pinataMetadata": {"name": "clocktower-frontend", "keyvalues": {"deployed": "'$(date -u +"%Y-%m-%dT%H:%M:%SZ")'"}}}' > pinata-metadata.json
        
        echo " Pinata metadata:"
        cat pinata-metadata.json
        
        # Upload to Pinata using v3 API
        echo "🔄 Uploading to Pinata v3 API..."
        response=$(curl -X POST \
          -H "Authorization: Bearer ${{ secrets.PINATA_JWT_TOKEN }}" \
          -F "file=@build.zip" \
          -F "pinataMetadata=@pinata-metadata.json" \
          -F "network=public" \
          https://uploads.pinata.cloud/v3/files \
          -w "\nHTTP_STATUS:%{http_code}\n")
        
        echo " Pinata response:"
        echo "$response"
        
        # Extract HTTP status
        http_status=$(echo "$response" | grep "HTTP_STATUS:" | cut -d: -f2)
        echo " HTTP Status: $http_status"
        
        # Extract the IPFS hash (only if status is 200)
        if [ "$http_status" = "200" ]; then
          ipfs_hash=$(echo "$response" | grep -v "HTTP_STATUS:" | jq -r '.data.cid')
          echo "🎯 Extracted IPFS hash: $ipfs_hash"
        else
          echo "❌ Upload failed with status: $http_status"
          echo "🔍 Full response: $response"
          exit 1
        fi
        
        # Set output for next steps
        echo "ipfs_hash=$ipfs_hash" >> $GITHUB_OUTPUT
        
        echo "✅ Deployed to IPFS: $ipfs_hash"
        echo " Gateway URL: https://gateway.pinata.cloud/ipfs/$ipfs_hash"
    
    - name: Update Cloudflare Worker KV
      run: |
        echo "🔄 Updating Cloudflare KV with hash: ${{ steps.deploy.outputs.ipfs_hash }}"
        
        # Debug: Check if hash is available
        if [ -z "${{ steps.deploy.outputs.ipfs_hash }}" ]; then
          echo "❌ Error: IPFS hash is empty!"
          exit 1
        fi
        
        echo "🎯 Hash to store: ${{ steps.deploy.outputs.ipfs_hash }}"
        echo "🔑 Account ID: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}"
        echo "📦 Namespace ID: ${{ secrets.CLOUDFLARE_KV_NAMESPACE_ID }}"
        
        # Update Cloudflare KV
        kv_response=$(curl -X PUT \
          -H "Authorization: Bearer ${{ secrets.CLOUDFLARE_API_TOKEN }}" \
          -H "Content-Type: application/json" \
          -d '{"value": "${{ steps.deploy.outputs.ipfs_hash }}"}' \
          "https://api.cloudflare.com/client/v4/accounts/${{ secrets.CLOUDFLARE_ACCOUNT_ID }}/storage/kv/namespaces/${{ secrets.CLOUDFLARE_KV_NAMESPACE_ID }}/values/latest" \
          -w "\nHTTP_STATUS:%{http_code}\n")
        
        echo "📥 Cloudflare KV response:"
        echo "$kv_response"
        
        # Extract HTTP status
        kv_status=$(echo "$kv_response" | grep "HTTP_STATUS:" | cut -d: -f2)
        echo "🌐 KV HTTP Status: $kv_status"
        
        if [ "$kv_status" = "200" ]; then
          echo "✅ Cloudflare KV updated successfully"
        else
          echo "❌ Cloudflare KV update failed with status: $kv_status"
          echo "🔍 Full response: $kv_response"
          exit 1
        fi
    
    - name: Comment on PR
      if: github.event_name == 'pull_request'
      uses: actions/github-script@v7
      with:
        script: |
          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: `🌐 **IPFS Deployment Complete!**\n\nYour app is now available at:\n- IPFS Gateway: https://gateway.pinata.cloud/ipfs/${{ steps.deploy.outputs.ipfs_hash }}\n- Custom Domain: https://ipfs.clocktower.finance\n- IPFS Hash: \`${{ steps.deploy.outputs.ipfs_hash }}\``
          })
